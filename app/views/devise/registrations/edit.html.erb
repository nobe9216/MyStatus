<div class="users">
  <div>
    <h2>メールアドレス パスワード編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="users__form-item">
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="users__form-item">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>

      <div class="users__form-item">
        <div class="field">
          <%= f.label :新しいパスワード %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>

      <div class="users__form-item">
        <div class="field">
          <%= f.label :新しいパスワードの確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="users__form-item">
        <div class="field">
          <%= f.label :現在のパスワード %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
      </div>

      <div class="users__form-item">
        <div class="actions">
          <%= f.submit "更新", class: "all__link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
