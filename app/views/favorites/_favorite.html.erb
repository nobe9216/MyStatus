<% if status.favorited_by?(current_user) %>
  <p>
    <%= link_to user_status_favorite_path(user.id, status), method: :delete, remote: true do %>
      ♥<%= status.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to user_status_favorites_path(user.id, status), method: :post, remote: true do %>
      ♡<%= status.favorites.count %> いいね
    <% end %>
  </p>
<% end %>