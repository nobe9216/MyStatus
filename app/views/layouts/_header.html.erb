<div class="header">
  <a href='/' class="header__title">MyStatus</a>
  <div class="header__hamburger-menu">
    <input type="checkbox" id="header__menu-btn-check">
    <label for="header__menu-btn-check" class="header__menu-btn"><span></span></label>
  </div>
  <nav>
    <ul class="header__link">
      <% if user_signed_in? %>
        <li>
          <%= link_to 'トップ', root_path, class: "header__link-item" %>
        </li>
        <li>
          <%= link_to 'マイページ', user_path(current_user), class: "header__link-item" %>
        </li>
        <li>
          <%= link_to 'マイカレンダー', user_statuses_path(current_user), class: "header__link-item" %>
        </li>
        <li>
          <%= link_to 'タイムライン', user_timeline_path(current_user), class: "header__link-item" %>
        </li>
        <li>
          <%= link_to 'ユーザー一覧', users_path, class: "header__link-item" %>
        </li>
        <li>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"}, class: "header__link-item" %>
        </li>
      <% else %>
        <li>
          <%= link_to 'トップ', root_path, class: "header__link-item" %>
        </li>
        <li>
          <%= link_to 'このサイトについて', about_path, class: "header__link-item" %>
        </li>
        <li>
          <%= link_to '新規登録', new_user_registration_path, class: "header__link-item" %>
        </li>
        <li>
          <%= link_to 'ログイン', new_user_session_path, class: "header__link-item" %>
        </li>
      <% end %>
    </ul>
  </nav>
</div>