<div class="users">
  <table class="users__table">
    <thead class="users__table-head">
      <tr>
        <th class="users__table-item">名前</th>
        <th class="users__table-item">年齢</th>
        <th class="users__table-item">身長</th>
        <th class="users__table-item">体重（開始時）</th>
        <th class="users__table-item">体重（目標）</th>
        <th class="users__table-item">性別</th>
        <th class="users__table-item"></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="users__table-item"><%= link_to "#{user.nickname}", user_path(user.id), class: "all__link-notbutton" %></td>
        <td class="users__table-item"><%= user.age %></td>
        <td class="users__table-item"><%= user.height %></td>
        <td class="users__table-item"><%= user.start_weight %></td>
        <td class="users__table-item"><%= user.goal_weight %></td>
        <td class="users__table-item"><%= user.sex %></td>
        <td class="users__table-item">
          <% if current_user.id != user.id %>
            <% if current_user.following?(user) %>
              <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "all__link" %>
            <% else %>
              <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "all__link" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
