<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>年齢</th>
      <th>身長</th>
      <th>体重（開始時）</th>
      <th>体重（目標）</th>
      <th>性別</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to "#{user.nickname}", user_path(user.id) %></td>
      <td><%= user.age %></td>
      <td><%= user.height %></td>
      <td><%= user.start_weight %></td>
      <td><%= user.goal_weight %></td>
      <td><%= user.sex %></td>
      <td>
        <% if current_user.id != user.id %>
          <% if current_user.following?(user) %>
            <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete %>
          <% else %>
            <%= link_to "フォロー", user_relationships_path(user.id), method: :post %>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>